<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:id="@+id/relative_profile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-29dp">

        <Button
            android:id="@+id/tagMath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tagScience"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="214dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="292dp"
            android:text="Math" />

        <Button
            android:id="@+id/tagEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tagSocial"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="297dp"
            android:layout_toStartOf="@+id/tagMath"
            android:text="English" />

        <Button
            android:id="@+id/tagSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="130dp"
            android:text="Social" />

        <Button
            android:id="@+id/tagScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="130dp"
            android:text="Science" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>